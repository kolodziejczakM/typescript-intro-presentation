{
    "compilerOptions": {
        "declaration": true,
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": true,
        "declarationDir": "dist",
        "outDir": "dist"
    },
    "include": ["./src/**/*"]
}
